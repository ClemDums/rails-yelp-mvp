<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :category %>
  <%# <%= f.text_field.select :category ["Chinese", "Italian", "Japanese", "French", "Belgian"]%>
  <%# <%= f.select :category, ["Chinese", "Italian", "Japanese", "French", "Belgian"]%>
<%= f.select :category, options_for_select(["Chinese", "Italian", "Japanese", "French", "Belgian"], :selected => params[:category]) %>
<%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <%= f.submit %>
<% end %>
